<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/categoryPost.css" />
    <title><%= category %> Posts</title>
  </head>
  <body>
    <div class="category-posts-container">
      <nav>
        <img
          id="pin-logo"
          src="https://cdn-icons-png.flaticon.com/128/220/220214.png"
          alt="logo"
        />
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/explore">Explore</a></li>
          <li><a href="/create">Create</a></li>
        </ul>
        <div>
          <a href="/profile">
            <img
              id="user-logo"
              src="https://cdn-icons-png.flaticon.com/128/1077/1077114.png"
              alt=""
            />
          </a>
        </div>
      </nav>
      <div class="category-flex">
        <h1><%= category %> Posts</h1>
      </div>
      <div class="category-post-flex">
        <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
        <div class="category-post">
          <img src="/uploads/<%= post.image %>" alt="<%= post.title %>" />
        </div>
        <% }) %> <% } else { %>
        <p>No posts found for <%= category %></p>
        <% } %>
      </div>
    </div>
  </body>
</html>
